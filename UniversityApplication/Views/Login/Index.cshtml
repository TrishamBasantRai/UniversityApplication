<html>
    <head>
        <script type="text/javascript" src="~/Scripts/LoginScript.js"></script>
        <script type="text/javascript" src="~/Scripts/ServerCall.js"></script>
        <link rel="stylesheet" href="~/CSS/MainStyleSheet.css" />
        <title>University Application - Login</title>
    </head>
    <body>
        <div class="PageContainer">
            <h2 class="PageTitle">Login</h2>
            <span role="alert" id="errorPane" aria-hidden="true" style="color:red"></span>
            <form method="POST" class="formContainer" id="form" onsubmit="SignIn(event)">
                <label class="formLabel" for="EmailAddress">Your Email Address:</label>
                <input class="formInput" type="email" id="emailAddress" name="emailAddress" placeholder="Your email goes here" required maxlength="100"/>
                <label class="formLabel" for="password">Your Password:</label>
                <input class="formInput" type="password" id="password" name="password" required/>
                <input class="submitInput" type="submit" value="Log in" id="buttonLogin" />
            </form>
            <h4>You don't have an account yet?</h4>
            <a href="/Register/Index">Register Now</a>
        </div>
    </body>
</html>



@{
    ViewBag.Title = "Index";
}

<head>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <script type="text/javascript" src="~/Scripts/NewRegisterScript.js"></script>
    <script type="text/javascript" src="~/Scripts/ServerCall.js"></script>
    <link rel="stylesheet" href="~/CSS/StyleSheet.css" />

    <title>Register</title>
</head>

<div class="PageContainer">
    <h2 class="PageTitle">Register a New Account</h2>
    <span role="alert" id="errorPane" aria-hidden="true" style="color:red"></span>
    <form method="POST" class="formContainer" id="form" onsubmit="Register(event)">
        <label class="formLabel" for="EmailAddress">Your Email Address:</label>
        <input class="formInput" type="email" id="emailAddress" name="emailAddress" placeholder="Your email goes here" />
        <label class="formLabel" for="password">Your Password:</label>
        <input class="formInput" type="password" id="password" name="password" />
        <label class="formLabel" for="confirmPassword">Confirm Your Password:</label>
        <input class="formInput" type="password" id="confirmPassword" name="confirmPassword" />
        <input class="submitInput" type="submit" value="Register" id="buttonRegister" />
    </form>
</div>
